#!/usr/bin/env node
'use strict';

const logger = require('onf-logger');
const argv = require('yargs')
    .usage('Usage: dump_describes [options]')

    .describe('active', 'List only active blocks (i.e., `fdescribe`, `fit`)')
    .boolean('active')

    .describe('inactive', 'List only inactive blocks (i.e., `xdescribe`, `xit`)')
    .boolean('inactive')

    .describe('destination', '[Optional] The location to save the output (defaults to $PWD)')
    .alias('destination', 'd')
    .nargs('target', 1)

    .describe('html', 'Creates an html document of the tree')
    .boolean('html')

    .describe('markdown', 'Creates a markdown document of the tree')
    .alias('markdown', 'md')
    .boolean('markdown')

    .describe('target', 'The target suite to parse')
    .alias('target', 't')
    .nargs('target', 1)

    .describe('debug', 'Turns on debug mode')
    .boolean('debug')

    .describe('verbose', 'Dumps `it` blocks')
    .alias('verbose', 'v')
    .boolean('verbose')

    .help('help')
    .alias('help', 'h')
    .argv;

const h = require('onf-static');
const visitor = require('../src/visitor');

const target = argv.target;
const logInfo = logger.info;
const logError = logger.error;
const options = {
    active: argv.active,
    destination: argv.destination || '.',
    inactive: argv.inactive,
    // Use Map data structure rather than an Array.
    useMap: true,
    verbose: argv.verbose
};

let generator = null;
if (argv.html) {
    generator = require('../src/generator/html');
} else if (argv.markdown) {
    generator = require('../src/generator/markdown');
} else {
    generator = require('../src/generator/log');
}

// TODO: This is just a temporary solution.
h.setDebugLevel(!argv.debug ? 'NONE' : 'DEBUG');

// Mixin our node type functions.
h.register(visitor);

if (!target) {
    const stdin = process.stdin;
    let buf = '';

    stdin.setEncoding('utf8');

    stdin.on('readable', () => {
        const chunk = stdin.read();

        if (chunk !== null) {
            buf += chunk;
        }
    });

    stdin.on('end', () => {
        // Last argument denotes this as data.
        h.makeTree(buf, generator, options, true)
        .then(logInfo)
        .catch(logError);
    });
} else {
    h.makeTree(target, generator, options)
    .then(logInfo);
}

